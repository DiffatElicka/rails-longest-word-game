<h1 style="text-align: center;">Here's the letter</h1>
<div class="flexbox">
  <% @letters.each do |letter| %>
    <div class="card"><p><%= letter%></p></div>
  <% end %>
</div>
<div class="flexbox">
  <form action="/score">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%=  hidden_field_tag :letters, @letters %>
    <input type="text" name="word">
    <input type="submit" value="Your Answer?">
  </form>
</div>
